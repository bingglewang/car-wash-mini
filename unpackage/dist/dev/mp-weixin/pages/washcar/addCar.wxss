.page {
  height: 100vh;
}
.car-item-contet {
  height: 20%;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: bold;
}
.detail-bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 50px;
}
.detail-bottom .save-button-addCar {
    border-radius: 100px;
    width: 80%;
    background-image: -webkit-linear-gradient(45deg, #0081ff, #1cbbb4);
    background-image: linear-gradient(45deg, #0081ff, #1cbbb4);
}
.detail-item-tile {
  height: 50px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-left: 20px;
}
.detail-item-title-font {
  font-weight: bold;
  font-size: 15px;
}
.detail-item-content {
  height: 50px;
  padding-left: 20px;
  padding-right: 20px;
}
.detail-item-content input {
    font-size: 14px;
    text-align: left;
    padding-left: 15px;
}
.carinput-input {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.carinput-input-i {
  width: 50rpx;
  border-bottom-width: 2rpx !important;
  border-bottom-style: solid;
  border-bottom-color: #BCBCBC;
  font-size: 36rpx;
  color: #333333;
  line-height: 1;
  margin-right: 12rpx;
  padding-bottom: 7rpx;
  text-align: center;
}
.carinput-input-i:nth-last-child(1) {
  margin-right: 0;
}
.carinput-input .input-active {
  border-bottom-width: 2rpx !important;
  border-bottom-style: solid;
  border-bottom-color: #0081FF;
  color: #0081FF;
}
.carinput-power {
  height: 90rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.carinput-power .checkbox-g {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.carinput-power .checkbox {
  margin-right: 92rpx;
  font-size: 28rpx;
  color: #999999;
  line-height: 1;
}
checkbox .wx-checkbox-input {
  border-radius: 50% !important;
  color: #ffffff !important;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  color: #fff !important;
  background: #0081FF !important;
}
.wx-checkbox-input.wx-checkbox-input-checked {
  border: none !important;
}
.carinput-power .checkbox checkbox {
  -webkit-transform: scale(0.6) translateY(-2px);
          transform: scale(0.6) translateY(-2px);
  margin-right: 0;
}
.detail-item-input {
  height: 80%;
}

