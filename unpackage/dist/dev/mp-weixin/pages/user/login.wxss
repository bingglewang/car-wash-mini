
.zai-box{
	margin-top: 50rpx;
	padding: 0 100rpx;
	position: relative;
}
.zai-logo{
	width: 100%;
	width: 100%;
	height: 310rpx;
}
.zai-title{
	position: absolute;
	top: 0;
	line-height: 360rpx;
	font-size: 68rpx;
	color: #fff;
	text-align: center;
	width: 100%;
	margin-left: -100rpx;
}
.zai-form{
	margin-top: 50rpx;
}
.zai-label{
	padding: 40rpx 0;
	text-align: center;
	font-size: 30rpx;
	color: #a7b6d0;
}
.zai-btn{
		background-image: -o-linear-gradient(45deg, #0081ff, #1cbbb4);
		background-image: linear-gradient(45deg, #0081ff, #1cbbb4);
	color: #fff;
	border: 0;
	border-radius: 100rpx;
	font-size: 36rpx;
}
.zai-btn:after{
	border: 0;
}
/*按钮点击效果*/
.zai-btn.button-hover{
	-webkit-transform: translate(1rpx, 1rpx);
	    -ms-transform: translate(1rpx, 1rpx);
	        transform: translate(1rpx, 1rpx);
}

